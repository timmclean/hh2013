.page
	background #f2f2f2
	font-family sans-serif
	font-weight 300

	> h1
		padding 12px 18px

		color #919191
		font-size 24px

	> .container
		display flex

		width 100%

		> .patientName, > .jNumber
			display block

			flex 1
			padding 6px 18px

		> .jNumber
			text-align right

	> .domains
		> .domain
			padding 12px 0 0 0

			color black

			> .name
				padding 12px 18px

				background #bbb
				color black
				font-weight 700
				text-transform uppercase

			> .addFocus
				display block

				margin 12px 18px

				border 1px dashed #919191

				padding 0 42px

				color #919191
				cursor pointer
				font-weight 700
				line-height 48px

			> .focuses
				> .focus
					margin 0 18px
					padding 12px 0 0 0

					> .mostRecentRevision, > .pastRevisions
						> .container
							display flex

							textarea
								height 80px

								padding 12px

								border 1px solid #919191
								border-left-style none
								outline none

								&:first-child
									border-left-style solid

							> .description
								display block
								width 30%

							> .solution
								display block
								width 60%

							> .initials
								display block
								width 10%
