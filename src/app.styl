.page
	font-family sans-serif
	font-weight 300

	> h1
		padding 12px 18px

		color hsl(220, 10%, 60%)
		font-size 24px

	> .container
		display flex

		width 100%

		> .patientName, > .jNumber
			display block

			flex 1
			padding 6px 18px

		> .jNumber
			text-align right

	> .domains
		padding 0 18px

		> .domain
			padding 12px 0

			color black

			> .name
				color hsl(220, 10%, 60%)
				font-weight 700
				text-transform uppercase

			> .addFocus
				display block

				margin 12px 8px

				border 3px dashed hsl(220, 10%, 80%)

				padding 0 42px

				color hsl(220, 10%, 70%)
				cursor pointer
				font-weight 700
				line-height 48px

			> .focuses
				> .focus
					padding 12px 6px

					textarea
						margin 0 1px

						border 3px solid hsl(220, 10%, 80%)
						outline none

					> .container
						display flex

						> .description
							display block
							width 30%

						> .solution
							display block
							width 60%

						> .initials
							display block
							width 10%
